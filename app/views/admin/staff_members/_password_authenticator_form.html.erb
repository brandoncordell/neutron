<%= simple_form_for([:admin, @staff_member]) do |f| %>
  <div class="flex flex-wrap -mx-3">
    <div class="w-1/2 px-3">
      <%= f.input :first_name %>
    </div>

    <div class="w-1/2 px-3">
      <%= f.input :last_name %>
    </div>
  </div>

  <%= f.input :email, placeholder: "@#{Config.domain}" %>
  <%= f.input :password, required: true %>
  <%= f.input :windows_username %>
  <%= f.input :phone_number, input_html: { 'data-inputmask': "'mask': '(999) 999-9999 [Ext 99999999]'" } %>

  <%= f.button :submit %>
<% end %>
